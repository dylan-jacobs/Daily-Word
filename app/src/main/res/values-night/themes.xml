<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyWord" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorAccent">@color/grey_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LinearLayout" parent="android:Theme.Holo.Light">
        <item name="android:background">@drawable/round_rect</item>
        <item name="android:backgroundTint">@color/grey_dark</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>